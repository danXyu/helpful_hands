.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        i.fa.fa-institution
        | Helpful Hands
    .collapse.navbar-collapse
      a.exit-button(class=title=='Video Conferencing'?'visible':undefined, href='/rate') Exit Call

      ul.nav.navbar-nav.navbar-right
        li.dropdown(class=title=='Account Management'?'active':undefined)
          a.dropdown-toggle(href='#', data-toggle='dropdown')
            if user.profile.picture
              img.profile-pic(src='#{user.profile.picture}')
            else
              img.profile-pic(src='#{user.gravatar(60)}')
            | #{user.profile.name || user.email || user.id}&nbsp;
            i.caret
          ul.dropdown-menu
            li
              a(href='/account') My Account
            li.divider
            li
              a(href='/createlisting') Find a Mentor
            li.divider
            li
              a(href='/logout') Logout