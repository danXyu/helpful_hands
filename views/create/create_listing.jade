extends ../layout

block content
  .container
    h2.mentee-page-header
      | Finding a Mentor

    form.form-horizontal(role='form', method='POST')
      input(type='hidden', name='_csrf', value=_csrf)
      .form-group
        label(class='col-sm-2 control-label', for='title') Title
        .col-sm-8
          input.form-control(type='text', name='title', id='title', autofocus=true)
      .form-group
        label(class='col-sm-2 control-label', for='description') Tagline
        .col-sm-8
          textarea.form-control(type='text', name='description', id='description', rows='5')
      .form-group
        .col-sm-offset-2.col-sm-8
          button.btn.btn-primary(type='submit')
            i.fa.fa-code
            | Create Listing